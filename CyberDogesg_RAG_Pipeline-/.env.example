# ============================================
# Cybercrime Knowledge Base API Configuration
# ============================================

# Pinecone Vector Database
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=cybercrime-kb-sentencetransformer

# Google Gemini AI API
GOOGLE_API_KEY=your_google_api_key_here

# Embedding Configuration
# Set to "true" to use Sentence Transformers (better confidence scores and semantic understanding)
# Set to "false" to use TF-IDF (faster but lower accuracy)
USE_SENTENCE_TRANSFORMER=true

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# LLM Model Configuration (used for query refinement and answer rephrasing)
LLM_MODEL=gemini-1.5-flash

